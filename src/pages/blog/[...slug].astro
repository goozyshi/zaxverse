export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { 
      slug: post.data.slug || post.slug.split('/index.')[0].replace(/^\d+-/, '')
    },
    props: { post },
  }));
}

